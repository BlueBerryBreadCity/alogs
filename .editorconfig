# editorconfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{html,js,ts,css,scss,xml}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.yml]
indent_style = space
indent_size = 2
